<div>
    <a href="/Cliente/Index" class="btn btn-info"><i class="glyphicon glyphicon-refresh"> </i> Voltar</a>
</div>

@section Scripts{

    <script>
        $(function () {
            $('#Tipo').change(function () {

                var el = $(this);
                var value = el.val();

                if (value == "1") {
                    $('#pessoaFisicaContainer').show();
                    $('#pessoaJuridicaContainer').hide();
                }
                else {
                    $('#pessoaFisicaContainer').hide();
                    $('#pessoaJuridicaContainer').show();
                }
            });

        });

    </script>
    
